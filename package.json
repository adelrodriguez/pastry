  "keywords": [
    "bun",
    "template",
    "library"
  ],
  "homepage": "https://github.com/adelrodriguez/pastry#readme",
  "bugs": {
    "url": "https://github.com/adelrodriguez/pastry/issues"
  },
  "repository": {
    "type": "git",
